/* miniprogram/pages/index/index.wxss */
page{
    height: 100%;
}
.container{
    width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    flex-direction: column;
    position: relative;
}

.topOutside{
    position: absolute;
    top: -50rpx;
    right: 0;
    left: 0;
    height: 50rpx;
    width: 750rpx;
}
.add{
    width: 120rpx;
    height: 120rpx;
    background-color: orange;
    border-radius: 100rpx;
    position: fixed;
    bottom: 50rpx;
    /* right: 50rpx; */
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    box-shadow:-5rpx 5rpx 15rpx rgb(170, 169, 169);
}

.add image{
    width: 80rpx;
    height: 80rpx;
}
.title{
    width: 100%;
    /* height: 100rpx; */
    background-color: orange;
}
.titlebar{
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    /* justify-content: flex-start; */
    /* align-self: center; */
}
.titlebar image{
    width: 50rpx;
    height: 50rpx;
    margin: 0 20rpx;
    /* align-self: flex-start; */
}

.titlebar text{
    text-align: center;
}

.header{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
}

.timeInputOutput{
    display: flex;
    width: 100%;
    flex-direction: column;
    justify-content: center;
    /* align-items: center; */
    background-image: linear-gradient(orange,#F6F6F6);
}

.time{
    display: flex;
    align-items: center;
    flex-direction: row;
}

.year{
    margin: 20rpx 30rpx;
    color: gray;
    font-size: 14px;
}
.month{
    font-size: 19px;
}
.month_unit{
    font-size: 14px;
    margin: 0 6rpx;
}
.down{
    width: 30rpx;
    height: 20rpx;
}
.inputOutput{
    display: flex;
    font-size: 14px;
    color: gray;
    flex-direction: row;
    /* justify-content: space-between; */
}
.input{
    margin: 10rpx 30rpx;
    flex: 1;
    display: flex;
    flex-direction: column;
}
.output{
    margin: 10rpx 30rpx;
    flex: 1;
    display: flex;
    flex-direction: column;
}
.inputOuputLine{
    align-self: center;
    width: 1rpx;
    height: 50rpx;
    background-color: gray;
}
.amount{
    margin-top:30rpx;
    color: black;
    margin-bottom: 30rpx;
}
.int{
    font-size: 18px;
}
.scrollview{
    flex: 1;
    /* height: 500px; */
}
.item{
    width: 100%;
    display: flex;
    color: gray;
    font-size: 14px;
    flex-direction: column;
    /* justify-content: space-between; */
}

.oneLine{
    padding: 0 25rpx;
    width: 700rpx;
    height: 90rpx;
    line-height:90rpx;
    display: flex;
    flex-direction: row;
    /* justify-content: space-between; */
    align-content: center;
    align-items: center;
}

.malebg{
    background-color: rgb(253, 232, 235);
}
.fmalebg{
    background-color: rgb(228, 244, 250);
}
.oneLine image{
    width: 50rpx;
    height: 50rpx;
    font-size: 13px;
}
.mark{
    color: gray;
    flex:1;
    text-align: center;
}
.itemamount{
    color: black;
    /* flex:1; */
    width: 150rpx;
    text-align: right;
    font-size: 18px;
}
.item_time{
    flex: 1;
    line-height: 70rpx;
    height: 70rpx;
    margin-left: 20rpx;
}
.item_input{
    width: 200rpx;
}
.item_output{
    width: 200rpx;
    text-align: left;
    margin-right: 30rpx;
}
.itemLine{
    width: 100%;
    height: 1rpx;
    background-color: rgb(241, 241, 241);
}

.itemtitle{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-content: center;
}

.itemcount{
    color: black;
    font-size: 16px;
    margin-right: 50rpx;
    line-height: 70rpx;
    height: 70rpx;
}

.datasView{
    margin-top: 380rpx;
}

.out{
    color: rgb(248, 131, 131);
}

.in{
    color: rgb(85, 84, 84)
}