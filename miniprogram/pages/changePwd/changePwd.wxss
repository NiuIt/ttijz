/* pages/changePwd/changePwd.wxss */


.title{
    /* z-index: 99; */
    position: fixed;
    width: 100%;
    /* height: 100rpx; */
    background-color: orange;
}
.titlebar{
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    /* justify-content: flex-start; */
    /* align-self: center; */
}

.titlebar text{
    padding: 0 30rpx;
    font-size: 15px;
    height: 44px;
    /* width: 50px; */
    line-height: 44px;
    text-align: center;
}
.container{
    padding-top: 150rpx;
}
.tip{
    margin-bottom: 100rpx;
    color: black;
    font-size: 20px;
}
.item{
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 500rpx;
    margin-top: 20rpx;
}
.text{
    width: 150rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: right;
}
input{
    margin-left: 10rpx;
    flex: 1;
    border-radius: 10rpx;
    height: 70rpx;
    line-height: 70rpx;
    border: 1rpx gray solid;
    padding: 10rpx;
}

.add{
    height: 90rpx;
    color: white;
    background-color: orange;
    border-radius: 100rpx;
    letter-spacing: 10px;
    width: 500rpx;
    /* right: 50rpx; */
    display: flex;
    margin-top: 100rpx;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    box-shadow:-5rpx 5rpx 15rpx rgb(170, 169, 169);
    z-index: 99;
}