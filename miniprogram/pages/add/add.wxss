/* miniprogram/pages/index/index.wxss */
page{
    height: 100%;
}
.container{
    width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    flex-direction: column;
}

.add{
    height: 90rpx;
    color: white;
    background-color: orange;
    border-radius: 100rpx;
    position: absolute;
    bottom: 50rpx;
    letter-spacing: 10px;
    width: 500rpx;
    /* right: 50rpx; */
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    box-shadow:-5rpx 5rpx 15rpx rgb(170, 169, 169);
}

.title{
    width: 100%;
    /* height: 100rpx; */
    background-color: orange;
}
.titlebar{
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    /* justify-content: flex-start; */
    /* align-self: center; */
}

.titlebar text{
    padding: 0 30rpx;
    font-size: 15px;
    height: 44px;
    /* width: 50px; */
    line-height: 44px;
    text-align: center;
}

.picker{
    position: fixed;
    width: 750rpx;
}

.date{
    display: flex;
    flex-direction: row;
    background-color: white;
}

.date image{
    width: 50rpx;
    height: 50rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.year{
    flex: 1;
    text-align: center;
    border-bottom: 1px solid  rgb(223, 222, 222);
    height: 70rpx;
    line-height: 70rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    color: gray;
}

.month{
    flex: 1;
    text-align: center;
    border-bottom: 1px solid  rgb(223, 222, 222);
    height: 70rpx;
    line-height: 70rpx;
    border-right: 1px solid  rgb(223, 222, 222);
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}

.scrollView{
    margin-top: 72rpx;
}

.icon{
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    /* justify-content: space-around; */
}
.icon_item{
    width: 125rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    margin: 10rpx 0;
}
.icon_item text{
    font-size: 12px;
}
.icon_item image{
    width: 65rpx;
    margin: 10rpx 30rpx;
    height: 65rpx;
}

.input_scrollview{
    flex: 1;
    padding-bottom: 150rpx;
}
.order{
    font-size: 12px;
    color: rgb(187, 186, 186);
    margin-left: 10rpx;
}
.input_item{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 3%;
    font-size: 14px;
    height: 100rpx;
    margin-top: 20rpx;
    box-shadow: 0 0 5px gray;
    width: 94%;
}
.itype{
    width: 50rpx;
    height: 50rpx;
    margin-left: 10rpx;
}
.delete{
    width: 40rpx;
    height: 40rpx;
    margin: 0rpx 10rpx;
}
.type{
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
}
.marktext{
    width: 90rpx;
    color: gray;
}
.mark{
    flex: 1;
}
.inputLine{
    width: 1rpx;
    height: 30rpx;
    background-color: gray;
    margin:0 20rpx ;
}
.amount{
    font-size: 15px;
    color: black;
    width: 150rpx;
}